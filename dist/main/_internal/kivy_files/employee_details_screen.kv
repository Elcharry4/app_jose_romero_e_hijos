<EmployeeDetailsScreen>:
    BoxLayout:
        orientation: 'vertical'
        BarraTop:
            id: toolbar
            title: "Actividades de"
            left_action_items: [["arrow-left", lambda x: app.root.get_screen('employee_details').go_back_to_orders()]]
            right_action_items: [["history", lambda x: app.root.get_screen('employee_details').go_to_history()]]
        ScrollView:
            MDList:
                id: task_list
                padding: 10
        MDRaisedButton:
            text: "AÃ±adir Tarea"
            size_hint: None, None
            size: "140dp", "48dp"
            pos_hint: {"center_x": 0.5}
            on_release: root.add_placeholder_task()
        MDSpinner:
            id: spinner
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x': .5, 'center_y': .5}
            active: False
