<FundidoScreen>:
    BoxLayout:
        orientation: 'vertical'
        BarraTop:
            title: "Registro de Fundici√≥n"
            left_action_items: [["menu", lambda x: app.get_running_app().nav_controller.open_drawer("fundido_drawers")]]
        ScrollView:
            GridLayout:
                id: employee_grid
                cols: 2
                spacing: dp(10)
                padding: dp(10)
                size_hint_y: None
                height: self.minimum_height
                row_default_height: dp(40)
        MDRaisedButton:
            text: "Cargar"
            size_hint: None, None
            size: "140dp", "48dp"
            pos_hint: {"center_x": 0.5}
            on_release: root.show_fundido_dialog()
        MDSpinner:
            id: spinner
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x': .5, 'center_y': .5}
            active: False
    BaseNavigationDrawer:
        id: fundido_drawers
        on_kv_post: app.nav_controller.set_drawer(self, "fundido_drawers")

<SelectableEmployeeItem>:
    orientation: 'horizontal'
    size_hint_y: None
    height: dp(40)
    spacing: dp(10)
    MDCheckbox:
        id: checkbox
        size_hint_x: None
        width: dp(40)
        on_active: root.on_checkbox_active(self, self.active)
    ButtonLabel:
        text: root.name
        size_hint_x: 1
        on_release: root.toggle_checkbox()
