<DesktopHome>:
    name: 'desktop_home'
    MDScreen:
        MDScreenManager:
            id: screen_manager
            MDScreen:
                name: "pantalla principal"
                MDBoxLayout:
                    orientation: 'vertical'
                    BarraTop:
                        left_action_items: [["menu", lambda x: app.get_running_app().nav_controller.open_drawer("home_desktop")]]
                    ConfigTabs:
                        Tab:
                            title: "Administración"
                            icon: "file-document"
                            ButtonAdministracion:
                        Tab:
                            title: "Producción"
                            icon: "factory"
                            ButtonProducion:
                        Tab:
                            title: "Laboratorio"
                            icon: "atom"
                            ButtonLaboratorio:
                        Tab:
                            title: "Otros"
                            icon: "infinity"
                            ButtonOtros:
        BaseNavigationDrawer:
            id: home_desktop
            on_kv_post: app.nav_controller.set_drawer(self, "home_desktop")

